<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPageActivity">

    <LinearLayout
        android:id="@+id/layoutMyProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageMyProfile"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:columnCount="3"
            android:orientation="horizontal"
            android:rowCount="3">


            <TextView
                android:id="@+id/textNumOfComment"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="0"
                android:layout_weight="1"
                android:gravity="center"
                android:text="13" />

            <TextView
                android:id="@+id/textNumOfCollection"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="0"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2" />

            <TextView
                android:id="@+id/textNumOfToGO"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_row="0"
                android:layout_weight="1"
                android:gravity="center"
                android:text="21" />

            <TextView
                android:id="@+id/textComment"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="1"
                android:layout_weight="1"
                android:gravity="center"
                android:text="코멘트" />

            <TextView
                android:id="@+id/textCollection"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="1"
                android:layout_weight="1"
                android:gravity="center"
                android:text="컬렉션" />


            <TextView
                android:id="@+id/textTogo"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_row="1"
                android:layout_weight="1"
                android:gravity="center"
                android:text="가고 싶어요" />

            <TextView
                android:id="@+id/textFollower"
                android:layout_columnSpan="2"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="팔로워 30" />

            <TextView
                android:id="@+id/textFollowing"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="팔로잉 76" />
        </GridLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textSelfIntroduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutMyProfile"
        android:gravity="center"
        android:hint="자기소개 메세지" />

    <ListView
        android:id="@+id/listFid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>


</RelativeLayout>